<h2><%= @supplier.brand_name %></h2>
<div>
	<strong>Razão Social:</strong> <%= @supplier.corporate_name %>
  <strong>CNPJ:</strong> <%= @supplier.registration_number %>
	<strong>Cidade:</strong> <%= @supplier.city %>
	<strong>Estado:</strong> <%= @supplier.state %>
	<strong>Endereço:</strong> <%= @supplier.full_address %>
  <strong>E-mail:</strong> <%= @supplier.email %>
</div>
<div>
	<%= link_to('Editar', edit_supplier_path(@supplier.id)) %>
</div>
<div>
  <%= link_to('Voltar', root_path) %>
</div>
<div>
	<h3>Modelos de Produto do Fornecedor:</h3>
	<% if @supplier.product_models.any? %>
		<% @supplier.product_models.each do |pm| %>
			<%= link_to pm.name, product_model_path(pm.id) %>
		<% end %>
	<% else %>
		<p>Nenhum modelo de produto cadastrado</p>
	<% end %>
</div>